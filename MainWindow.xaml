<Window x:Class="DB_WIFI_Scanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DB_WIFI_Scanner"
        Title="Wi-Fi Ghost Tracker" Height="792" Width="500">

    <StackPanel Margin="0,0,0,-6">
        <CheckBox Name="DeepScanCheckBox" Content="Enable Deep Scan (BSSID/RSSI)" Margin="10"/>

        <local:GhostRadarControl x:Name="GhostRadar" Width="400" Height="400" Margin="10"/>
        <ListBox Name="WifiList" FontSize="14" Margin="10"/>
    </StackPanel>
</Window>
